DT.onReady(()=>{const stats=document.querySelector('.js-header-stats-wrapper');const statsBtn=document.querySelector('.js-header-stats-btn');const notification=document.querySelector('.js-header-notification');const avatar=document.querySelector('.js-avatar-notification');statsBtn.addEventListener('click',()=>{if(DT.UI.is(notification,'opened')){DT.UI.set(notification,'hidden')}
if(stats.hasAttribute('data-open')){if(DT.breakpoints.is('headerStatsMobile')){DT.UI.unset(avatar)}else{DT.UI.unset(statsBtn)}
DT.animation.slideUp(stats);stats.removeAttribute('data-open');return}
let statsDisplay='block';if(DT.breakpoints.is('headerStatsMobile')){DT.UI.set(avatar,'active');document.dispatchEvent(new CustomEvent('menu-mobile:close-active',{detail:{active:'header-stats',},}))}else{DT.UI.set(statsBtn,'active');statsDisplay='flex'}
DT.animation.slideDown(stats,200,statsDisplay);stats.setAttribute('data-open','')});DT.breakpoints.on('headerStatsMobile',{enter:()=>{if(!stats.hasAttribute('data-open'))return;DT.UI.set(avatar,'active');DT.UI.unset(statsBtn);if(stats.style.display==='flex'){stats.style.display='block'}},});DT.breakpoints.on('headerStatsDesktop',{enter:()=>{if(!stats.hasAttribute('data-open'))return;DT.UI.set(statsBtn,'active');DT.UI.unset(avatar);if(stats.style.display==='block'){stats.style.display='flex'}},});document.addEventListener('menu-mobile:close-active',({detail:{active}})=>{if(!DT.breakpoints.is('headerStatsMobile')||active==='header-stats'||!stats.hasAttribute('data-open')){return}
if(DT.UI.is(notification,'opened')){DT.UI.set(notification,'hidden')}
DT.UI.unset(avatar);DT.animation.slideUp(stats,100);stats.removeAttribute('data-open')})})